{
    "name": "LiteEnd",
    "version": "1.0.0",
    "main": "src/index.ts",
    "license": "MIT",
    "type": "commonjs",
    "engines": {
        "node": ">=13.0.0"
    },
    "scripts": {
        "start": "NODE_ENV=production ts-node src/index.ts",
        "dev": "ts-node-dev --respawn src/index.ts",
        "prisma:deploy": "npx prisma migrate deploy",
        "prisma:create": "npx prisma migrate dev --create-only",
        "prisma:gen": "npx prisma generate",
        "prisma:studio": "npx prisma studio --browser none",
        "prisma:format": "npx prisma format",
        "postprisma:deploy": "npm run prisma:gen",
        "gen": "npm run ts:gen && npm run prisma:gen",
        "ts:gen": "graphql-codegen --config codegen.yml",
        "ts:check": "tsc --noEmit",
        "lint": "./node_modules/.bin/eslint . --fix --quiet",
        "check": "npm run ts:check && npm run lint",
        "ncu": "npx ncu -u"
    },
    "dependencies": {
        "@prisma/client": "^2.23.0",
        "apollo-server-express": "^2.24.1",
        "bcrypt": "^5.0.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-rate-limit": "^5.2.6",
        "graphql": "^15.5.0",
        "graphql-cost-analysis": "^1.0.3",
        "helmet": "^4.6.0",
        "log4js": "^6.3.0",
        "validate.js": "^0.13.1"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^2.0.2",
        "@graphql-codegen/cli": "1.21.4",
        "@graphql-codegen/introspection": "1.18.2",
        "@graphql-codegen/typescript": "1.22.0",
        "@graphql-codegen/typescript-resolvers": "1.19.1",
        "@jetbrains/eslint-config": "^5.3.1",
        "@types/node": "^15.6.0",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "eslint": "^7.27.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-sonarjs": "^0.7.0",
        "npm-check-updates": "^11.5.13",
        "prisma": "^2.23.0",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.4"
    }
}
