{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "sonarjs"
    ],
    "extends": [
        "@jetbrains",
        "@jetbrains/eslint-config/node",
        "plugin:node/recommended",
        "plugin:sonarjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": "off",
        "no-return-assign": "off",
        "no-magic-numbers": "warn",
        "valid-jsdoc": "off",
        "radix": "off",
        "no-native-reassign": "off",
        "multiline-ternary": "off",
        "no-shadow": "warn",
        "no-multiple-empty-lines": "error"
    }
}
