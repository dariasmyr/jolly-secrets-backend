{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "@jetbrains",
        "@jetbrains/eslint-config/node"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": "off",
        "no-return-assign": "off",
        "no-magic-numbers": "warn",
        "valid-jsdoc": "off",
        "radix": "off",
        "no-native-reassign": "off",
        "multiline-ternary": "off",
        "no-shadow": "warn",
        "no-multiple-empty-lines": "error"
    }
}
